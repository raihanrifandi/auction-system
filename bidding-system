#include <iostream>
#include <string>
#include <vector>
#include <list>
#include <stack>
#include <queue>
using namespace std;

void tampilkanHeader() {

    cout << "================================" << endl;

    cout << "=        SELAMAT DATANG        =" <<endl;

    cout << "=       DI PROGRAM LELANG      =" << endl;

    cout << "================================" << endl;

    cout << endl;

}

void tampilkanFooter() {

    cout << endl;

    cout << "================================" << endl;

    cout << "|       TERIMA KASIH!          |" << endl;

    cout << "================================" << endl;

}

int main() {


    tampilkanHeader();

  

    string namaBarang;

    int hargaAwal;

    cout << "Masukkan nama barang: ";

    getline(cin, namaBarang);

    cout << "Masukkan harga awal: ";

    cin >> hargaAwal;

    cout << std::endl;

    cout << "Barang yang dilelang: " << namaBarang << endl;

    cout << "Harga awal: " << hargaAwal << endl;

    tampilkanFooter();

return 0;

}

